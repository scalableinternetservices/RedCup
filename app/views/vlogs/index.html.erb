<div style="width: 80%;margin: AUTO;">
<h1>Vlogs</h1>

<table class="table table-striped table-bordered table-hover">
  <thead class="table-dark">
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>User name</th>
      <th>User Id</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @vlogs.each do |vlog| %>
      <tr>
        <td><%= link_to vlog.title, vlog %></td>
        <td><%= vlog.content %></td>
        <td><%= vlog.user_name %></td>
        <% if vlog.user_id == 5 %>
          <td></td>
        <%else%>
          <td><%= vlog.user_id%></td>
        <%end%>
        <% if vlog.user == current_user %>
          <td><%= link_to 'Delete', vlog, method: :delete, data: { confirm: 'Are you sure?'}, class: "btn btn-danger" %> </td>
        <% else %>
          <td>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Vlog', new_vlog_path, class:"btn btn-primary"%>
</div>
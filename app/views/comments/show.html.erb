<div class="card text-center", style="width: 80%;margin: AUTO;">
  <div class="card-header">
    <h2> Comment </h2>
  </div>
  <div class="card-body">
    <p class="card-text", style="text-align:left;font-size: 16px;"><%= @comment.comment %></p>
  </div>
  <div class="card-footer text-muted">
    <% if @comment.user_id == 5 %>
      <strong>Author: Anonymous </strong>
    <% else %>
      <strong> Author: <%= @comment.user_id%></strong>
    <% end %>
    <br/>
    <strong>Created:</strong>
    <%= @comment.created_at %>
    <br/>
    <strong>Updated:</strong>
    <%= @comment.updated_at %>
    <br/>
    <br/>
    <% if @comment.user == current_user %>
      <strong>
        <%= link_to "Edit", edit_vlog_comment_path(@comment.vlog, @comment), class:"btn btn-outline-info btn-sm" %>
        <%= link_to 'Delete Comment', [@comment.vlog, @comment], method: :delete, data: { confirm: 'Are you sure?'}, class:'btn btn-outline-danger btn-sm'%>
        </strong>
    <% end %>
  </div>
</div>
<br/>

  <div style="width: 80%;margin: AUTO;">
  <%= link_to 'Back To Vlog', @comment.vlog%>
  </div>  